{
  "name": "mcp-meteoswiss",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for MeteoSwiss weather data.",
  "license": "CC0-1.0",
  "author": "Max F. Albrecht <1@178.is>",
  "main": "src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec 'tsx src/index.ts'",
    "ci": "pnpm run lint && pnpm run build && pnpm run test",
    "dist": "pnpm run clean && pnpm run build && pnpm run test",
    "lint": "pnpm run lint:ts && pnpm run lint:eslint",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "start": "node dist/index.js",
    "dev:inspect": "npx @modelcontextprotocol/inspector http://localhost:3000/mcp",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "pnpm run test --watch",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest test/integration",
    "build": "tsc",
    "build:windows": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eins78/mcp-server-meteoswiss-data.git"
  },
  "keywords": [
    "mcp",
    "weather",
    "meteoswiss"
  ],
  "bugs": {
    "url": "https://github.com/eins78/mcp-server-meteoswiss-data/issues"
  },
  "homepage": "https://github.com/eins78/mcp-server-meteoswiss-data#readme",
  "dependencies": {
    "@eins78/styles": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "jsdom": "^24.1.3",
    "micromark": "^4.0.2",
    "micromark-extension-gfm": "^3.0.0",
    "tsx": "^4.19.4",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@modelcontextprotocol/inspector": "^0.13.0",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.13.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "mcp-remote": "^0.1.14",
    "nock": "^14.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
