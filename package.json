{
  "name": "mcp-server-meteoswiss-data",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for MeteoSwiss weather data.",
  "main": "src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "lint": "tsc --noEmit && eslint 'src/**/*.{ts,tsx}'",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "start": "tsx src/index.ts",
    "start:stdio": "tsx src/index.ts stdio",
    "start:http": "tsx src/index.ts http",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:integration": "jest --testMatch='**/test/integration/**/*.test.ts'",
    "build": "tsc",
    "build:windows": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eins78/mcp-server-meteoswiss-data.git"
  },
  "keywords": [
    "mcp",
    "weather",
    "meteoswiss"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eins78/mcp-server-meteoswiss-data/issues"
  },
  "homepage": "https://github.com/eins78/mcp-server-meteoswiss-data#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "cors": "^2.8.5",
    "eventsource-parser": "^3.0.2",
    "express": "^5.1.0",
    "jsdom": "^24.0.0",
    "tsx": "^4.19.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.13.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nock": "^14.0.4",
    "prettier": "^3.2.5",
    "ts-jest": "^29.3.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.15.5+sha256.8472168c3e1fd0bff287e694b053fccbbf20579a3ff9526b6333beab8df65a8d"
}
